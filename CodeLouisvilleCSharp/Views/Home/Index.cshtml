@using CodeLouisvilleCSharp.Models
@model CodeLouisvilleCSharp.Models.Home
@{
    ViewBag.Title = "Budget Piggy";
}

<link href="~/Content/Site.css" rel="stylesheet" />

<div class="jumbotron">
    <p class="lead">Welcome to Budget Piggy. A simple app for tracking your budget.</p>
</div>

<div class="row">
    <div class="col-md-4">
        <a href="~/ItemView/AddItem"
           class="btn btn-primary" id="AddButton">
            <span class="glyphicon glyphicon-plus"></span> Add Entry
        </a>
        @*Pull partial view to show the table*@
        @{Html.RenderAction("GetTable");}
        </div>
    <div class="col-md-8">
        @*Pull partial view to show the chart*@
        <img id="chart" src="@Url.Action("GetChartImage")"/>
    </div>
</div>
   